<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/iv_icon"
        android:layout_width="@dimen/px__icon_size"
        android:layout_height="@dimen/px__icon_size"
        android:minHeight="@dimen/px__icon_size"
        />

    <TextView
        android:id="@+id/tv_tinted_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="start|center_vertical"
        android:ellipsize="marquee"
        android:gravity="center_vertical"
        android:minHeight="@dimen/px__item_height"
        android:paddingStart="@dimen/px__popup_padding_left"
        android:paddingLeft="@dimen/px__popup_padding_left"
        android:paddingTop="@dimen/px__popup_padding_top"
        android:paddingRight="@dimen/px__popup_padding_left"
        android:paddingBottom="@dimen/px__popup_padding_top"
        android:singleLine="true" />

</LinearLayout>